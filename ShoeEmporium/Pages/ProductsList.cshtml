@page
@model ShoeEmporium.Pages.ProductsListModel
@{
    ViewData["Title"] = "Products List";
}
<div class="text-center">
    <h1 class="display-4">Welcome To</h1>
    <h1>Shoe Emporium</h1>
</div>
<nav class="navbar">
    <div class="nav">
        <img src="img/logo.png" class="brand-logo" alt="">
        <div class="nav-items">
            <div class="search">
                <input type="text" class="search-box" placeholder="search brand, product">
                <button class="search-btn">search</button>
            </div>
            <a href="#"><img src="img/user.png" alt=""></a>
            <a href="#"><img src="img/cart.png" alt=""></a>
        </div>
    </div>
</nav>
<ul class="links-container">
    <li class="link-item"><a href="#" class="link">home</a></li>
    <li class="link-item"><a href="#" class="link">women</a></li>
    <li class="link-item"><a href="#" class="link">men</a></li>
    <li class="link-item"><a href="#" class="link">kids</a></li>
    <li class="link-item"><a href="#" class="link">accessories</a></li>
</ul>

<header class="hero-section">
    <div class="content">
        <img src="img/12.jpg" class="logo" alt="">
        <p class="sub-heading">best fashion collection of all time</p>
    </div>
</header>

<div class="row">
    @foreach (var Product in Model.Products)
    {
        <div id="Container" class="col-lg-3 col-md-4 col-sm-1">
            <img id="Image" style="width: 100%; height: 100%;" src="@Product.Product_image" alt="@Product.Product_name" />
            <span id="Title">@Product.Product_name</span>
            <span id="Price">Rs. Coming Soon</span>
            <span id="Quantity"><input id="quantityInput" type="number" name="Quantity" value="" placeholder="0" /></span>
            <span id="CartButton"><button id="btn"><span class="fa fa-shopping-cart"></span>Add to Cart</button></span>
        </div>
    }
</div>




